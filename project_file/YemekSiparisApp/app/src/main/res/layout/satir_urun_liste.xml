<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/urun_ismi_liste"
        android:layout_width="250dp"
        android:layout_height="35dp"

        android:background="@color/colorPrimaryDark"
        android:paddingTop="0.7dp"
        android:paddingBottom="5.5dp"
        android:text="Ürün İsmi"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/urun_fiyat_liste"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/urun_fiyat_liste"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_column="1"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="0.7dp"
        android:textAlignment="center"
        android:paddingBottom="5.5dp"
        android:text="10 TL"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/urun_arttir"
        app:layout_constraintStart_toEndOf="@+id/urun_ismi_liste"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/urun_arttir"
        android:layout_width="72dp"
        android:layout_height="35dp"

        android:background="@android:color/holo_red_light"
        android:text="Ekle"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>